<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BackgroundColor">
        <item name="android:background">@color/background_night</item>
    </style>

    <style name="TextSubtitleRow">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/merriweather_bold</item>
    </style>

    <style name="TextDate">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">12sp</item>
        <item name="android:textColor">@color/text__date_night</item>
        <item name="android:fontFamily">@font/libre_franklin_medium</item>
    </style>

    <style name="TextSubtitle">
        <item name="android:textSize">32sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/merriweather_bold</item>
    </style>

    <style name="Text">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/libre_franklin_regular</item>
    </style>
</resources>
